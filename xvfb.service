[Unit]
Description=Xvfb service for Selkies
After=network.target

[Service]
ExecStart=/usr/bin/Xvfb \
	:1 \
	-screen 0 "1920x1080x24" \
	-dpi 96 \
	+extension "COMPOSITE" \
	+extension "DAMAGE" \
	+extension "GLX" \
	+extension "RANDR" \
	+extension "RENDER" \
	+extension "MIT-SHM" \
	+extension "XFIXES" \
	+extension "XTEST" \
	+iglx \
	+render \
	-nolisten "tcp" \
	-ac \
	-noreset \
	-shmem
Restart=always
RestartSec=5

[Install]
WantedBy=default.target